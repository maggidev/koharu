{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "identifier": "com.koharu.app",
  "build": {
    "beforeDevCommand": "bun --cwd ui dev",
    "beforeBuildCommand": "bun --cwd ui build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../ui/out"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "visible": false,
        "width": 1024,
        "height": 768,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "title": "Koharu",
        "decorations": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen",
        "decorations": false,
        "resizable": false,
        "height": 200,
        "width": 300,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "identifier": "com.koharu.app",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
